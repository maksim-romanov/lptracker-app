{
  "extends": "@matrapp/typescript-config/base.json",
  "compilerOptions": {
    "types": ["bun"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "api/*": ["src/api/*"],
      "gql": ["src/gql"],
      "gql/*": ["src/gql/*"],
      "lib/*": ["src/lib/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
